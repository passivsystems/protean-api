(ns protean.test.simplesim
  (:require [protean.api.transformation.sim :refer :all]
            [protean.api.transformation.coerce :as coerce]))

{
  "sample" {
    "simple" {
      :get (fn [request]
             (if-let [errors (validate request)]
               (respond request 400 (coerce/pretty-js errors))
               (respond request 200)))
    }
    "complex" {
      :get (fn [request]
             (if-let [errors (validate request)]
               (respond request 403)
               (respond request 200)))
    }
  }
}
